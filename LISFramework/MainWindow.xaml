<Window x:Class="LISFramework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LISFramework"
        xmlns:VM="clr-namespace:LISFramework.ViewModel"
        mc:Ignorable="d" 
        Title="MainWindow" Height="700" Width="1500" WindowState="Maximized">
  <Window.Resources>
    <VM:MainWindowViewModel x:Key="mainwindowViewVM"/>
  </Window.Resources>
  <StackPanel DataContext="{Binding Source={StaticResource mainwindowViewVM}}">
    <ToolBarTray>
      <ToolBar>
        <Button  Content="Settings" Command="{Binding SettingCommand}" />
      </ToolBar>
    </ToolBarTray>
    <TabControl x:Name="tabCtrl" SelectionChanged="TabCtrl_SelectionChanged">
      <TabItem x:Name="tbLisComm" Header="LIS"/>
    </TabControl>
  </StackPanel>
</Window>
